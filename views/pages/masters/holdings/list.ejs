<div id="holdings-list" v-cloak>

  <%- partial('../../../partials/navbar.ejs') %>
  <%- partial('../../../partials/mainSidebar.ejs') %>

  <div class="main-content">
    <section class="section">

      <h1 class="section-header">
        <div>Empresas del Holding</div>
        <div class="section-header-breadcrumb dropdown">
          <a href="javascript:void(0)" data-toggle="dropdown" class="btn btn-outline-dark">Acciones</a>
          <ul class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
            <li><a href="javascript:void(0)" class="dropdown-item" v-on:click="btnOpenModalCreateH('open')">Crear Nueva Empresa</a></li>
          </ul>
        </div>
      </h1>

      <div class="row mt-5">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h4>Lista:</h4>
            </div>
            <div class="card-body">

              <%/* Progresive bar */%>
              <div class="progress animated" :class="[progressBar.animated]" v-show="progressBar.active" style="margin-bottom: 15px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
              </div>


              <%/* Alertas */%>
              <div class="row animated" :class="[alert.animated]" v-show="alert.active" style="display:none;">
                <div class="col-12" v-if="alert.active">
                  <div class="alert alert-has-icon alert-dismissible" :class="[alert.type]" >
                    <div class="alert-icon">
                      <i class="ion" :class="[alert.icon]"></i>
                    </div>
                    <div class="alert-body">
                      <button class="close" v-on:click="closeAlertD()">
                        <span>Ã—</span>
                      </button>
                      <div class="alert-title">{{ alert.title }}</div>
                      {{ alert.message }}
                    </div>
                  </div>
                </div>
                <br>
              </div>



              <p>(See also <em>assets\styles\pages\masters\holding\list.less</em>, <em>assets\js\pages\masters\holding\list.page.js</em>,
                and <em>api\controllers\masters\holding\view-list.js</em>.)</p>

            </div>
          </div>
        </div>
      </div>
    </section>
  </div>


  <%- partial('../../../partials/footer.ejs') %>

  <%- partial('./pm-create') %>
  <%- partial('./pm-view-and-edit') %>

</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
