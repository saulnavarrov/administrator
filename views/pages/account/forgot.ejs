<div id="forgot" v-cloak class="h-100">

  <section class="h-100">
		<div class="container h-100">
			<div class="row justify-content-md-center align-items-center h-100">
				<div class="card-wrapper">
					<div class="brand">
						<img src="/images/favicons/apple-icon-114x114.png">
					</div>
					<div class="card fat">
						<div class="card-body">
							<h4 class="card-title"><%= typeof(i18n('Forgot.title')) === 'undefinded' ? 'Forgot password' : i18n('Forgot.title') %></h4>
							<form method="POST">

								<div class="form-group">
									<label for="email"><%= typeof(i18n('Forgot.form Email')) === 'undefinded' ? 'E-Mail Address' : i18n('Forgot.form Email') %></label>
									<input id="email" type="email" class="form-control" name="email" value="" required autofocus>
									<div class="form-text text-muted">
										<%= typeof(i18n('Forgot.form Text')) === 'undefinded' ? 'By clicking \"Reset Password\" we will send a password reset links' : i18n('Forgot.form Text') %>
									</div>
								</div>

								<div class="form-group no-margin">
									<button type="submit" class="btn btn-primary btn-block">
										<%= typeof(i18n('Forgot.form btn submit')) === 'undefinded' ? 'Reset Password' : i18n('Forgot.form btn submit') %>
									</button>
                </div>
                <div class="margin-top20 text-center">
									<a href="/login"><%= typeof(i18n('Forgot.return Login')) === 'undefinded' ? 'Back to login' : i18n('Forgot.return Login') %> </a>
								</div>
							</form>
						</div>
					</div>
					<div class="footer">
						<a class="nav-link text-info" href="/contacto">Contacte<span class="d-none d-sm-inline"> a soporte</span></a>
					</div>
				</div>
			</div>
		</div>
	</section>

</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
